<h1>Company Details</h1>
<%= link_to 'Edit Company', :edit_company %>
<h2><%= @company.name %></h2>
<h3>Description:</h3>
<p><%= @company.description %></p>
<h3>Country:</h3>
<p><%= @company.country %></p>
<h3>Start Date:</h3>
<p><%= @company.start_date %></p>
<h3>Games:</h3>
<ul>
  <% @company.games.each do |game| %>
    <li><%= game.name %></li>
  <% end %>
</ul>
